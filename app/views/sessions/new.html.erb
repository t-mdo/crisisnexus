<div class="bg-white pb-6 sm:py-8 lg:py-12">
  <h2 class="text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-8 xl:mb-12">Login</h2>
  <div class="text-gray-800 px-4 md:px-8 flex justify-center">
    <div class="p-6 w-96 rounded-lg border border-gray-200 shadow-md">
      <%= form_tag session_path, class: 'my-4 max-w-md' do %>
        <%= label_tag :email, 'Email Address' %><br />
        <%= text_field_tag :email,
          params[:email],
          class: "px-3 py-2 mb-3 bg-white border shadow-sm border-slate-300 placeholder-slate-400 focus:outline-none focus:border-sky-500 focus:ring-sky-500 block w-full rounded sm:text-sm focus:ring-1",
          placeholder: 'you@example.com',
          type: 'email'
        %>
      <%= label_tag :password %><br />
      <%= password_field_tag :password, nil,
        class: 'px-3 py-2 mb-6 bg-white border shadow-sm border-slate-300 placeholder-slate-400 focus:outline-none focus:border-sky-500 focus:ring-sky-500 block w-full rounded sm:text-sm focus:ring-1'
      %>
    <%= submit_tag "Log in", class: 'w-full bg-violet-500 hover:bg-violet-600 active:bg-violet-700 focus-visible:ring ring-violet-300 text-white text-xs md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-2 py-2 md:px-8 md:py-3' %>
  <% end %>
  <p class="mt-8">You don't have an account? <%= link_to 'Sign up', new_account_path, class: 'text-violet-600 hover:underline' %></p>
  <p class="mt-2">
  Forgot your password? <%= link_to 'Reset it', new_password_reset_path, class: 'text-violet-600 hover:underline' %></p>
    </div>
  </div>
</div>
