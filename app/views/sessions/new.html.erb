<div class="pb-6 sm:py-8 lg:py-12">
  <div class="flex justify-center px-4 md:px-8">
    <div class="w-full max-w-lg">
      <%= form_tag session_path do %>
        <div class="mb-2">
          <%= label_tag :email, 'Email Address' %>
        </div>
        <div class="mb-4">
          <%= text_field_tag :email,
            params[:email],
            class: "px-3 py-2 bg-gray-800 placeholder-gray-400 focus:outline-none focus:ring-purple-600 block w-full rounded focus:ring-1",
            placeholder: 'you@example.com',
            type: 'email'
          %>
        </div>
        <div class="mb-2">
          <%= label_tag :password %><br />
        </div>
        <div class="mb-12">
          <%= password_field_tag :password, nil,
            class: 'px-3 py-2 bg-gray-800 placeholder-gray-400 focus:outline-none focus:ring-purple-600 block w-full rounded sm:text-sm focus:ring-1'
          %>
        </div>
        <%= submit_tag "Log in", class: 'w-full bg-purple-800 hover:bg-purple-900 active:bg-gray-800 focus-visible:ring ring-purple-300 text-white text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-2 py-2 md:px-8 md:py-3' %>
  <% end %>
  <p class="text-sm mt-8">You don't have an account? <%= link_to 'Sign up', new_account_path, class: 'text-purple-400 hover:underline' %></p>
  <p class="text-sm mt-2">
  Forgot your password? <%= link_to 'Reset it', new_password_reset_path, class: 'text-purple-400 hover:underline' %></p>
    </div>
  </div>
</div>
